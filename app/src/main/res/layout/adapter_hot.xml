<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="246dp">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/hot_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:round="15dp"/>

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="match_parent"
        app:round="15dp"
        android:layout_height="match_parent"
        android:background="@drawable/shape_place"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/hot_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_above="@id/recyclerView_tag"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/recyclerView_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_above="@id/hot_about"
        android:layout_marginBottom="5dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/hot_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:lines="2"
        android:ellipsize="end"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:textColor="@color/b5b4b6"
        android:textSize="12sp"/>


</RelativeLayout>