<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="380dp">
    
    <RelativeLayout
        android:layout_width="366dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/fr_bg"
        android:layout_gravity="center_horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/first_coin2"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/white"
            android:rotation="15"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="111dp"
            android:layout_marginTop="135dp"
            android:textSize="14sp"
            android:text="x200"/>

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/first_price"
        android:layout_width="188dp"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="192dp"
        android:gravity="center"
        android:background="@drawable/shape_r21_gff93e6_af60ff"
        android:fontFamily="@font/airfool_2"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="@string/first_price"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/first_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/noi3"/>

</RelativeLayout>