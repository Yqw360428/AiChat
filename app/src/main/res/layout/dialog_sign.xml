<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/si_bg"
    android:layout_width="match_parent"
    android:layout_height="380dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_sign"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/get_btn"/>
    
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/get_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/si_get"
        android:layout_above="@id/get_btn1"
        android:layout_centerHorizontal="true"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/get_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/b5a7ba"
        android:textSize="12sp"
        android:text="@string/normal_receive"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>