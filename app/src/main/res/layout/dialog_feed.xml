<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shape_12r20_6b5b79"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="50dp"
        android:layout_height="4dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_r3_78707e"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_feed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="10dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/feed_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_r5_white10"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:minHeight="135dp"
        android:gravity="start"
        android:textColorHint="@color/white50"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:hint="@string/please_enter_your_suggestion"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/feed_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:background="@drawable/shape_r34_562e78"
        android:fontFamily="@font/airfool_2"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="@string/submit"/>

</androidx.appcompat.widget.LinearLayoutCompat>